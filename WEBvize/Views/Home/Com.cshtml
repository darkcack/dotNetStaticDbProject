@model  WEBvize.Models.Movie

@using (Html.BeginForm("YorumEkle", "Home", FormMethod.Post))
{
    <div class="card flex-md-row mb-4 shadow-sm h-md-250">
        <div class="card-body d-flex flex-column align-items-start">
            <h6 class="mb-2">
                <strong class="text-dark">Yorum Ekle</strong>
            </h6>
            <table class="table">
                <tr class="row">
                    @Html.Hidden("Comment.Movieid", Model.id)
                    <th class="col-2">
                        <label>İsminiz:</label>
                    </th>
                    <th class="col-3">
                        @Html.TextBox("Comment.CommentName", null, new { @class = "form-control" })
                    </th>
                    <th class="col-2">
                        <label>Yorumunuz:</label>
                    </th>
                    <th class="col-5">
                        @Html.TextBox("Comment.comment", null, new { @class = "form-control" })
                    </th>
                    <th>
                        <span class="dd">
                            <input type="submit" value="Yorum Ekle" class="btn btn-info" />
                        </span>
                    </th>
                </tr>

            </table>
        </div>
    </div>

}





<div>
    <hr />
    <div class="post-entry">
        <div>

        </div>

        @foreach (var item in Model.Comment)
        {
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title" style="text-decoration:underline">@item.CommentName</h5>
                    <div class="float-sm-right">
                        <hr class="bg-info " style="min-height:1px;max-height:1px;" />
                    </div>

                    <p class="card-text">@item.comment</p>

                </div>
                <div class="card-footer bg-white">
                    <span class="dd">
                        @Html.ActionLink("Yorumu Sil", "YorumSil", "Home", new { id = item.id }, new { @class = "btn btn-outline-danger" })
                    </span>
                </div>
            </div>
            <div style="padding-bottom:2vh"></div>
          

        }
        <div style="padding-bottom:22vh"></div>
    </div>
</div>
