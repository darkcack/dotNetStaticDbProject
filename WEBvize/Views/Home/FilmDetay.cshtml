@model  WEBvize.Models.Movie

@{
    ViewBag.Title = "detay";


}
<style>
    .dd {
        padding-left: 120vh;
    }
</style>
<div style="padding-bottom:2vh"></div>

<div class="alert alert-info" role="alert">
    <h2 class="alert-heading"> @Model.Name</h2>
    <h3 class="alert-heading">@Model.category.Name [@Model.Year]</h3>
    <h4 class="alert-heading">@Model.Headliner</h4>
    <h5 class="alert-heading">Film id: @Model.id</h5>


    <hr />
    <p style="font-size:25px">@Model.Description</p>
    <br /> <br />
    <br /> <br />
    <br />
    <hr class="bg-danger" />

    <h6 class="alert-heading">
        Bu Kategorideki diğer filmler:
        <br /> <br />
        @foreach (var item in Model.category.movies)
        {
            @Html.ActionLink(@item.Name, "FilmDetay", "Home", new { id = item.id }, new { @class = "btn btn-dark text-white bg-dark" })
            <br />


            <br />
        }
    </h6>
</div>

@Html.Partial("Com", Model)



