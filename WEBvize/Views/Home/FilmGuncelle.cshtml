@model WEBvize.Models.Movie
@using WEBvize.Models

@{
    ViewBag.Title = "Film Guncelle";
    var CategoryList = ViewBag.CategoryList as List<Category>;


}
<div style="padding-bottom:2vh"></div>

<h2>@ViewBag.Title</h2>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal shadow p-3 mb-5 bg-white rounded col-md-5">

    <hr class="bg-danger float-left" />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div>
        <div style="text-align:center"> @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", }) </div>
        <div style="text-align:center">@Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" }) </div>
        <div style="text-align:center">@Html.ValidationMessageFor(model => model.Headliner, "", new { @class = "text-danger", }) </div>
        <div style="text-align:center">@Html.ValidationMessageFor(model => model.Year, "", new { @class = "text-danger" })</div>
        <div style="text-align:center">@Html.ValidationMessageFor(model => model.categoryId, "", new { @class = "text-danger" })</div>



        <div style="padding-bottom:2vh"></div>
    </div>

    @Html.Hidden("id", Model.id)


    <div class="form-group col-md-12 text-sm-center">
        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div>

            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control border-info", @required = "required" } })
        </div>
    </div>

    <div class="form-group col-md-12 text-sm-center">
        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
        <div>

            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control border-info", @required = "required" } })

        </div>
    </div>

    <div class="form-group col-md-12 text-sm-center">
        @Html.LabelFor(model => model.Headliner, htmlAttributes: new { @class = "control-label col-md-2" })
        <div>
            @Html.EditorFor(model => model.Headliner, new { htmlAttributes = new { @class = "form-control border-info", @required = "required", } })
        </div>
    </div>

    <div class="form-group col-md-12 text-sm-center">
        @Html.LabelFor(model => model.Year, htmlAttributes: new { @class = "control-label col-md-2" })
        <div>
            @Html.EditorFor(model => model.Year, new { htmlAttributes = new { @class = "form-control border-info" } })
        </div>
    </div>

    <div class="form-group col-md-12 text-sm-center">
        <label class="control-label col-md-2">Kategori</label>
        <div>
            @Html.DropDownListFor(model => model.categoryId, new SelectList(CategoryList, "id", "Name", Model.category.id),
           "   Kategori Seçiniz (zorunlu)  ", new { @class = "form-control border border-info", @required = "required" })

        </div>
    </div>



    <div class="form-group col-md-12 text-sm-center">
        <div class="btn btn-block">
            <input type="submit" value="Güncelle" class="btn btn-info col-md-6" style="float:right" />
        </div>
    </div>
    <div style="padding-bottom:2vh"></div>

</div>

}
<br />
<div style="padding-bottom:5vh"></div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
